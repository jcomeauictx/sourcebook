/showpage load /realshowpage exch def
/showpage {
        gsave
        10 dict begin
        /inch {72 mul} def
	/white {1 setgray} def
	currentpagedevice /PageSize get dup 0 get /pagewidth exch def
	1 get /pageheight exch def
	/margin pagewidth .06 mul def  % might need to be fixed?
        pagewidth margin sub 0 moveto
        0 pageheight inch rlineto
        margin inch 0 inch rlineto
        0 inch pageheight neg inch rlineto
        closepath white fill
        end
        grestore
        realshowpage
} bind def
